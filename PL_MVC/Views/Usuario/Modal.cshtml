<div class="modal" tabindex="-1" role="dialog" id="Modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Aviso</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5>@ViewBag.Mensaje</h5>
                <h5>@ViewBag.Login</h5>
            </div>
            <div class="modal-footer">
                @*@Html.ActionLink("Regresar", "GetAll", "Materia", htmlAttributes: new { @class = "btn btn-danger" })*@
                @*SI es == false significa que los datos ingresados son correcto y si es null significa que esta
        haciendo otro proceso que no sea el login y lo redirige al getall*@

                @if (ViewBag.Login == false || ViewBag.Login == null)
                {

                    @Html.ActionLink("Ok", "GetAll", "Usuario", htmlAttributes: new { @class = "btn btn-danger" })
                }
                else
                {
                    //En caso contrario de que los datos sean incorrectos dirije al usuario al login


                    @Html.ActionLink("Ok", "Login", "Usuario", htmlAttributes: new { @class = "btn btn-danger" })
                }



            </div>
        </div>
    </div>
</div>

<script>$('#Modal').modal();</script>


