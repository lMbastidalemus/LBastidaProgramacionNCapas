@model ML.Producto
@{
    ViewBag.Title = "GetProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/Content/Styles/CatalogoArea.css" type="text/css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Open+Sans">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $(".wish-icon i").click(function () {
                $(this).toggleClass("fa-heart fa-heart-o");
            });
        });
    </script>
</head>
<body>
    <div class="container-xl">
        <div class="row">
           
           
            <div class="col-md-12">
                <h2>Lista de  <b>Productos  </b></h2>
               

                    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="0">
                       
                        <div class="carousel-inner">
                            <div class="item carousel-item active">
                           
                                <div class="row ">
                                    @foreach (ML.Producto producto in Model.Productos)
                                    {
                                        <div class="col-sm-3 ">
                                            <br />
                                            <div class="thumb-wrapper">
                                                <span class="wish-icon"><i class="fa fa-heart-o"></i></span>
                                                <div class="img-box">
                                                    @if (producto.Imagen == "" || producto.Imagen == null)
                                                    {
                                                        <img src="https://www.computerhope.com/jargon/g/guest-user.png" width="50" height="50" style="border-radius:30px" />
                                                    }
                                                    else
                                                    {
                                                        <img src="data:image/*;base64,@producto.Imagen" width="150" height="150" />
                                                    }
                                                </div>
                                                <div class="thumb-content">
                                                   3
                                                    <div class="star-rating">
                                                        <p>@producto.Descripcion</p>
                                                    </div>
                                                    <p class="item-price"> <b>$@producto.PrecioUnitario</b></p>
                                                    <p class="item-price">En almacen <b>@producto.Stock</b></p>

                                                    <a href="#" class="btn btn-primary">Add to Cart</a>
                                                </div>
                                            </div>
                                        </div>
                                      
                                       
                                    }
                                </div>
                                    

                            </div>
                                
                            
                        </div>
                      
                    </div>
                
            </div>
            
        </div>
    </div>
</body>
</html>
