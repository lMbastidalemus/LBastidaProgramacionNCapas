<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <link type="text/css" href="~/Content/Styles/CatalogoArea.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@5.3.1/font/bootstrap-icons.css">
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>


<body>
    <style>
        body {
            background: #e2eaef;
            font-family: "Open Sans", sans-serif;
        }
    </style>
   
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">

            @Html.ActionLink("Entrenamiento .NET", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 navegacion" style="margin:2rem">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @*<li style="margin-left: 2rem">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
        <li style="margin-left: 2rem">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>*@
                    <li style="margin-left: 2rem">@Html.ActionLink("Usuario", "GetAll", "Usuario", new { area = "" }, new { @class = "nav-link" })</li>
                    <li style="margin-left: 2rem">@Html.ActionLink("Departamento", "DepartamentoGetAll", "Departamento", new { area = "" }, new { @class = "nav-link" })</li>
                    <li style="margin-left: 2rem">@Html.ActionLink("Carga Masiva", "Cargar", "CargaMasiva", new { area = "" }, new { @class = "nav-link" })</li>
                    <li style="margin-left: 2rem">@Html.ActionLink("Catalogo", "Catalogo", "Catalogo", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
               
                <div class="nav navbar-nav navbar-right ">

                    <ul class="navbar-nav flex-grow-1 navegacion" style="margin:2rem">
                        <a class="btn btn-danger" style="margin-top:auto;" @Html.ActionLink("Salir", "Login", "Usuario")></a>
                    </ul>


                </div>
                
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>





